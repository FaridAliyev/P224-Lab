@model HomeVM

@{
    ViewData["Title"] = "Fiorello";
}

<section id="slider">
    <div class="owl-carousel slider">
        @foreach (SliderImage item in Model.SliderImages)
        {
            <div> <img src="img/@item.Image" alt=""> </div>
        }

    </div>
    <div class="container context pl-lg-5 ml-lg-3">
        <div class="row">
            <div class="col-lg-5">
                <div class="text">
                    <h1>@Html.Raw(Model.SliderText.Title)</h1>
                    <p class="text-black-50 d-none d-sm-block">
                        @Model.SliderText.Description
                    </p>
                </div>
                <div class="img">
                    <img src="img/@Model.SliderText.Image" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<section id="products">
    <div class="container">
        <div class="row pt-5">
            <div class="col-12 d-flex justify-content-between">
                <ul class="category-mobile d-md-none list-unstyled">
                    <li>
                        <a href="" class="categories mr-2">Categories</a>
                        <i class="fas fa-caret-down"></i>
                        <ul class="category list-unstyled" style="display: none;">
                            <li><a href="" data-id="all">All</a></li>
                            @foreach (Category item in Model.Categories)
                            {
                                <li><a href="" data-id="@item.Name.ToLower()">@item.Name</a></li>
                            }
                        </ul>
                    </li>
                </ul>
                <ul class="category d-none d-md-flex list-unstyled">
                    <li><a href="" data-id="all">All</a></li>
                    @foreach (Category item in Model.Categories)
                    {
                        <li><a href="" data-id="@item.Name.ToLower()">@item.Name</a></li>
                    }
                </ul>
                <ul class="list-unstyled">
                    <li>
                        <a href="" class="mr-2">Filter</a>
                        <i class="fas fa-caret-down"></i>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            @foreach (Product item in Model.Products)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                    <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
                        <div class="img">
                            <a href="">
                                <img src="img/@item.Image" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="title mt-3">
                            <h6>@item.Name</h6>
                        </div>
                        <div class="price">
                            <span class="text-black-50">Add to cart</span>
                            <span class="text-black-50">$@item.Price</span>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>

<section id="about">
    <div class="container py-5">
        <div class="row py-5">
            <div class="col-lg-6">
                <div class="img">
                    <img src="img/@Model.About.Video" class="img-fluid" alt="">
                    <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                        <i class="fas fa-play fa-lg"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-text mt-5 mt-lg-0 px-lg-5">
                    <h1>@Html.Raw(Model.About.Title)</h1>
                    <p class="py-3">
                        @Model.About.Description
                    </p>
                    <ul class="list-unstyled">
                        @foreach (AboutFeature item in Model.AboutFeatures)
                        {
                            <li class="mt-3">
                                <img src="img/h1-custom-icon.png" class="mr-2" alt=""> @item.Feature
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="experts">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>Flower Experts</h1>
                    <p class="text-black-50">
                        A perfect blend of creativity, energy, communication, happiness and
                        love. Let us arrange
                        a smile for you.
                    </p>
                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (Expert item in Model.Experts)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="item text-center">
                        <div class="img">
                            <img src="img/@item.Image" class="img-fluid rounded-circle" alt="">
                        </div>
                        <div class="text mt-3">
                            <h6>@item.Name @item.Surname</h6>
                            <p class="text-black-50">@item.Position.Name</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

